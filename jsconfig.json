{
    "compilerOptions": {
      "target": "es6",                     
      "module": "esnext",                    
      "moduleResolution": "node",   
      "allowSyntheticDefaultImports": true,  
      "baseUrl": "src",                     
      "paths": {
        "@components/*": ["components/*"],  
        "@utils/*": ["utils/*"]
      },
      "jsx": "react",                        
      "checkJs": true,                      
      "esModuleInterop": true,              
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src/**/*"],                
    "exclude": ["node_modules", "**/node_modules/*"] 
  }
  