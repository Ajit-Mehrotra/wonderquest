
# Stage 1: Build the React application
FROM node:22-alpine AS build
WORKDIR /app

# Add build arguments
ARG VITE_APP_BACKEND_SERVER_URL
ARG VITE_APP_FIREBASE_AUTH_API_KEY
ARG VITE_APP_FIREBASE_AUTH_DOMAIN
ARG VITE_APP_FIREBASE_AUTH_PROJECT_ID
ARG VITE_APP_FIREBASE_AUTH_STORAGE_BUCKET
ARG VITE_APP_FIREBASE_AUTH_MESSAGING_SENDER_ID
ARG VITE_APP_FIREBASE_AUTH_APP_ID
ARG VITE_APP_FIREBASE_AUTH_MEASUREMENT_ID

# Set environment variables
ENV VITE_APP_BACKEND_SERVER_URL=$VITE_APP_BACKEND_SERVER_URL
ENV VITE_APP_FIREBASE_AUTH_API_KEY=$VITE_APP_FIREBASE_AUTH_API_KEY
ENV VITE_APP_FIREBASE_AUTH_DOMAIN=$VITE_APP_FIREBASE_AUTH_DOMAIN
ENV VITE_APP_FIREBASE_AUTH_PROJECT_ID=$VITE_APP_FIREBASE_AUTH_PROJECT_ID
ENV VITE_APP_FIREBASE_AUTH_STORAGE_BUCKET=$VITE_APP_FIREBASE_AUTH_STORAGE_BUCKET
ENV VITE_APP_FIREBASE_AUTH_MESSAGING_SENDER_ID=$VITE_APP_FIREBASE_AUTH_MESSAGING_SENDER_ID
ENV VITE_APP_FIREBASE_AUTH_APP_ID=$VITE_APP_FIREBASE_AUTH_APP_ID
ENV VITE_APP_FIREBASE_AUTH_MEASUREMENT_ID=$VITE_APP_FIREBASE_AUTH_MEASUREMENT_ID


COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage 2: Use the nginx image for serving static content better
FROM nginx:stable-alpine
RUN apk add --no-cache certbot certbot-nginx
RUN apk add vim
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY certbot_renew /etc/crontabs/root
EXPOSE 80 443
CMD ["nginx", "-g", "daemon off;"]
